<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jinhe.modules.system.dao.SysUserOrganMapper">

    <insert id="insertList">
        insert into sys_user_organ (id, user_id, organ_id)
        <foreach collection="list" item="organ" separator="UNION">
            select
            #{organ.id},#{organ.userId}, #{organ.organId}
            from dual
        </foreach>

    </insert>
    <!--根据userId删除-->
    <delete id="deleteByUserId">
        delete from sys_user_organ where user_id = #{userId}
    </delete>
    <delete id="deleteByUserIdAndOrganId">
        DELETE o
        FROM
            sys_user_organ o
        WHERE
            o.user_id = #{userId}
            AND o.organ_id IN (
                WITH RECURSIVE td AS (
                SELECT
                    id
                FROM
                    sys_organ
                WHERE
                    id = #{organId} UNION ALL
                SELECT
                    c.id
                FROM
                    sys_organ c,
                    td
                WHERE
                    c.PARENT_ID = td.id
                ) SELECT
                *
            FROM
            td
            )
    </delete>
</mapper>
